{
	"name": "recipeai-backend",
	"version": "1.0.0",
	"description": "RecipeAI 後端服務",
	"main": "src/main.ts",
	"scripts": {
		"postinstall": "chmod +x node_modules/.bin/tsoa",
		"start": "cross-env PORT=3001 node dist/main.js",
		"dev": "tsoa spec-and-routes && tsc && nodemon --exec \"node -r dotenv/config --inspect\" dist/main.js",
		"build": "npx tsoa spec-and-routes && tsc",
		"lint": "eslint . --ext .ts",
		"test": "jest",
		"typecheck": "tsc --noEmit",
		"format": "prettier --write \"src/**/*.ts\"",
		"tsoa": "npx tsoa spec-and-routes"
	},
	"dependencies": {
		"@google/generative-ai": "^0.21.0",
		"@types/body-parser": "^1.19.5",
		"@types/joi": "^17.2.3",
		"aws-sdk": "^2.1000.0",
		"axios": "^1.7.7",
		"body-parser": "^1.20.3",
		"cors": "^2.8.5",
		"dotenv": "^10.0.0",
		"express": "^4.21.0",
		"helmet": "^4.6.0",
		"joi": "^17.13.3",
		"morgan": "^1.10.0",
		"react-helmet": "^6.1.0",
		"swagger-ui-express": "^5.0.1",
		"tsoa": "^6.4.0",
		"winston": "^3.3.3"
	},
	"devDependencies": {
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/jest": "^27.0.2",
		"@types/morgan": "^1.9.3",
		"@types/node": "^16.18.113",
		"@types/swagger-ui-express": "^4.1.6",
		"@typescript-eslint/eslint-plugin": "^5.3.0",
		"@typescript-eslint/parser": "^5.3.0",
		"cross-env": "^7.0.3",
		"eslint": "^8.2.0",
		"eslint-config-prettier": "^9.1.0",
		"jest": "^27.3.1",
		"nodemon": "^2.0.22",
		"prettier": "^3.3.3",
		"ts-jest": "^27.0.7",
		"ts-node": "^10.9.2",
		"typescript": "^4.9.5"
	},
	"engines": {
		"node": ">=14.0.0"
	},
	"author": "Allen",
	"license": "MIT",
	"keywords": []
}
